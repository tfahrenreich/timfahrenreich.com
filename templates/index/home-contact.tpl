<span class="debris"></span>
<div class="container">
    <h2 class="section-header">Contact</h2>
    <div id="form-container">
        <div id="sent" class="center-form">
            <h2><span class="letter-container">Sent!</span></h2>
        </div>
        <div id="sending" class="center-form">
            <img src="/includes/i/335.gif">
        </div>
        <div id="retry" class="center-form">
            <h2>Whoops!</h2>
            <a id="retry-button" class="button"><span>Retry?</span></a>
        </div>
        <form id="contact-form">
            <input id="name" type="text" placeholder="Name"/>
            <input id="email" type="text" placeholder="Email"/>
            <textarea id="message" placeholder="Message..."></textarea>
            <a id="form-submit" class="button">
                <span>Submit</span>
            </a>
        </form>
    </div>
</div>
